<div class="row">
  <div class="col s10">
      <div class="card horizontal">
        <div class="card-image" style="width: 50px; height: 50px">
          <%= image_tag post.user.photo? ? post.user.photo.url : "user-placeholder.png", size: "50x50", class: "circle responsive-img" %>
        </div>
        <div class="card-stacked">
          <div class="card-content">
            <p><%= post.content %></p>
          </div>
          <div class="card-action">
            <strong><a href="/users/<%= post.user.id %>" style="color: #2FC2EF"><%= post.user.name %></a></strong>
          </div>
        </div>
      </div>
  </div>
</div>
